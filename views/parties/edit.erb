<div>
	<form action="/parties/<%= @party.id %>" method="post">
		<input type="hidden" name="_method" value="patch">
		<p>
			Table Number:  <input name="party[table_no]" value="<%= @party.table_no %>">
		</p>
		<p>
			Number in Pary: <input name="party[guest_no]" value="<%= @party.guest_no %>">
		</p>
		<p>
			Paid: 
			<input type="radio" name="party[paid]" value="<%= true %>">Yes.
			<input type="radio" name="party[paid]" value="<%= false %>">No.
		</p>
		<p>
			Dufresnes, Party of 2?</br>
			<input type="radio" name="party[dufresnes]" value="<%= true %>">Yes, The Dufresnes Are Found
			<input type="radio" name="party[dufresnes]" value="<%= false %>">No, People Are Missing
		</p>
		<p>
			<input type="submit" value="Edit Party">
		</p>
	</form>
	<h4><a href="/parties">Party Menu</a></h4>
	<h4><a href="/parties/<%= @party.id %>">Party</a></h4>
</div>
